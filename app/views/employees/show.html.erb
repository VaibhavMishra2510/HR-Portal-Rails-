<div class="col-lg-12">
  <!-- Main Card Container -->
  <div class="card rounded-3 mt-5 mb-5 bg-light shadow-lg border-transparent" style="box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5), 0 4px 6px rgba(0, 0, 0, 0.3);">
    <div class="card-body">
      <!-- Title -->
      <div class="d-flex justify-content-center  align-items-center ">
        <div class="card rounded-lg  bg-light text-dark border-transparent rounded-pill "  style=" width: 30%;">
          <h2 class="text-center text-primary p-2 my-1">Employee Detail</h2>
        </div>
      </div>

      <!-- Personal and Address Information Section -->
      <div class="row mt-4">
        <div class="col-lg-6  rounded-4 shadow-lg bg-light text-dark border-transparent">
          <h3 class="text-left text-info">Personal Info</h3>
          <p class="lead "><strong>First Name:-</strong> <%= @employee.first_name %></p>
          <p class="lead "><strong>Last Name:-</strong> <%= @employee.last_name %></p>
          <p class="lead "><strong>Personal Email:-</strong> <%= @employee.personal_email %></p>
        </div>

        <div class="col-lg-6   bg-light text-dark border-transparent rounded-4 shadow-lg ">
          <h3 class="text-left text-info">Address Info</h3>
          <p class="lead "><strong>Address Line 1:-</strong> <%= @employee.address_line_1 %></p>
          <p class="lead "><strong>Address Line 2:-</strong> <%= @employee.address_line_2.presence || '--NA--' %></p>
          <p class="lead "><strong>City:-</strong> <%= @employee.city %></p>
          <p class="lead "><strong>Pincode:-</strong> <%= @employee.pincode %></p>
          <p class="lead "><strong>State:-</strong> <%= @employee.state %></p>
          <p class="lead "><strong>Country:-</strong> <%= @employee.country %></p>
        </div>
      </div>

      <!-- Documents Section (with image and details) -->
      <% if @employee.documents.present? %>
      <div class="row mt-5">
        <div class="d-flex justify-content-center mb-4 align-items-center ">
          <div class="card rounded-lg bg-light text-dark border-transparent rounded-pill "  style=" width: 30%;">
            <h2 class="text-center text-primary p-2 my-1 ">Documents Detail</h2>
          </div>
        </div>
        <% @employee.documents.each do |document| %>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
          <div class="card border-transparent rounded-4 shadow-lg">
            <div class="card-body bg-light">
              <div class="row">
                <!-- Display Image if Attached -->
                <% if document.image.attached? %>
                <div class="col-12 mb-3">
                  <%= image_tag document.image, class: 'img-fluid rounded-3' %>
                </div>
                <% end %>

                <div class="col-12">
                  <p class="lead text-dark"><strong>Document Name:- </strong> <%= document.name %></p>
                </div>
                <div class="col-12">
                  <p class="lead text-dark "><strong>Document Type:- </strong> <%= document.doc_type %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <% end %>

      <!-- Items Section -->
      <% if @employee.items.present? %>
      <div class="row mt-5">
        <div class="d-flex justify-content-center mb-4 align-items-center ">
          <div class="card rounded-lg bg-light text-dark border-transparent rounded-pill "  style=" width: 30%;">
            <h2 class="text-center text-primary p-2 my-1 ">Items Detail</h2>
          </div>
        </div>
        <% @employee.items.each do |item| %>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
          <div class="card border-light rounded-4 shadow-lg">
            <div class="card-body bg-light text-dark">
              <div class="row">
                <div class="col-12">
                  <p class="lead "><strong>Item Name:-</strong> <%= item.name %></p>
                </div>
                <div class="col-12">
                  <p class="lead "><strong>Price:-</strong> <%= number_to_currency(item.price, unit: "â‚¹", delimiter: ",", format: "%u%n") %></p>
                </div>
                <div class="col-12">
                  <p class="lead "><strong>Issued Date:-</strong> <%= item.issued_date.presence || 'N/A' %></p>
                  <p class="lead "><strong>Returned Date:-</strong> <%= item.returned_date.presence || 'N/A' %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <% end %>

      <!-- Action Buttons -->
      <div class="mt-4 text-center">
        <%= link_to "Edit Employee", edit_employee_path(@employee), class: "btn btn-primary btn-outline-light btn-lg mx-2" %>
        <%= link_to "Back to Employees", employees_path, class: "btn btn-outline-primary btn-lg rounded-lg" %>
      </div>
    </div>
  </div>
</div>
