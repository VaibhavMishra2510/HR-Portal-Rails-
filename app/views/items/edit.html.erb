<div class="col-lg-12">
  <!-- Card with Light Background and Primary Border -->
   <<div class="col-lg-12">
 <div class="d-flex justify-content-center align-items-center fw-bolder ">
 <div class="card  bg-info text-light border-dark  " style="box-shadow: 0 8px 16px rgba(255, 255, 255, 0.2), 0 4px 6px rgba(255, 255, 255, 0.1); width: 70%;">
    <div class="card-body text-center ">
      <h2 class="text-primary-emphasis">Assign Items</h2>
    </div>
  </div>
  </div>

  <!-- Notifications Section -->
  

  <!-- Form to Create New Item -->
  <%= form_with model: @item, local: true do |form| %>

  <div class="form-group">
  <%= form.label :employee_id, 'Assigned To', class: 'form-label text-dark' %>
       <%= form.select :employee_id, 
                  options_for_select(Employee.all.map { |e| [e.name, e.id] } + [['N/A', -1]], selected: @item.employee_id),
                  { prompt: 'Select an Employee' }, 
                  class: 'form-control bg-light text-dark', required: true %>
                  <div class="form-check ms-3">
     
</div>



   <div class="form-group">
  <%= form.label :issued_date, 'Assigned Date', class: 'mb-2 mt-2 text-dark' %>
<%= form.date_field :issued_date, { include_blank: true, class: 'form-control bg-light text-dark' } %>
   </div>


    <div class="form-group text-center">
      <%= form.submit 'Assign Item', class: 'btn btn-success btn-lg mb-4 mt-4 d-block mx-auto rounded-pill', 
                      style: "box-shadow: 0 8px 16px rgba(255, 255, 255, 0.2), 0 4px 6px rgba(255, 255, 255, 0.1);width: 30%" %>
    </div>
  <% end %>

  <!-- Back to Item List Link -->
  <%= link_to 'Back to Items List', items_path, 
              class: "btn btn-outline-primary btn-lg mb-4 d-block mx-auto rounded-pill", 
              style: "box-shadow: 0 8px 16px rgba(255, 255, 255, 0.2), 0 4px 6px rgba(255, 255, 255, 0.1); width: 30%;" %>
</div>
