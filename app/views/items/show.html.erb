<div class="col-lg-12">
  <!-- Card with Light Background and Primary Border -->
  <div class="d-flex justify-content-center mb-3 align-items-center">
    <div class="card rounded-lg bg-dark text-light border-primary rounded-pill"
         style="box-shadow: 0 8px 16px rgba(255, 255, 255, 0.2), 0 4px 6px rgba(255, 255, 255, 0.1); width: 40%;">
      <div class="card-body text-center">
        <h2 class="text-center text-primary">
          <i class="bi bi-person-fill"></i> Item Details
        </h2>
      </div>
    </div>
  </div>

  <!-- Item Details Section -->
  <div class="row mt-4">
    <div class="col-lg-6  rounded-4 shadow-lg border border-primary">
      <h3 class="text-left text-info">Item Info</h3>
      <p class="lead text-light"><strong>Item Name:-</strong> <%= @item.name %></p>
      <p class="lead text-light"><strong>Price:-</strong> <%= number_to_currency(@item.price, unit: "â‚¹", delimiter: ",", format: "%u%n") %></p>
    </div>

    <div class="col-lg-6  rounded-4 shadow-lg border border-primary">
      <h3 class="text-left text-info">Issued To</h3>
      <% if @item.employee_id.present? && @item.employee %>
        <p class="lead text-light"><strong>Employee Name:-</strong> <%= @item.employee.name %></p>
        <p class="lead text-light"><strong>Employee Email:-</strong> <%= @item.employee.personal_email %></p>
      <% else %>
        <p class="lead text-light"><strong>Issued To:-</strong> N/A</p>
      <% end %>
    </div>
  </div>

  <!-- Date Section -->
  <div class="row mt-4">
    <div class="col-lg-6  rounded-4 shadow-lg border border-primary">
      <h3 class="text-left text-info">Issued Date</h3>
      <p class="lead text-light"><strong>Issued Date:-</strong> <%= @item.issued_date.presence || 'N/A' %></p>
    </div>

    <div class="col-lg-6  rounded-4 shadow-lg border border-primary">
      <h3 class="text-left text-info">Returned Date</h3>
      <p class="lead text-light"><strong>Returned Date:-</strong> <%= @item.returned_date.presence || 'N/A' %></p>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="mt-4 text-center">
    <%= link_to "Edit Item", edit_item_path(@item), class: "btn btn-primary btn-outline-light btn-lg mx-2" %>
    <%= link_to "Back to Item List", items_path, class: "btn btn-outline-primary btn-lg rounded-lg" %>
  </div>
</div>
