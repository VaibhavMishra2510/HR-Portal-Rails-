<div class="col-lg-12">
  <!-- Card for Document Details -->
  <div class="card rounded-3 mt-5 mb-5 bg-dark shadow-lg border-primary" style="box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5), 0 4px 6px rgba(0, 0, 0, 0.3);">
    <div class="card-body">
       <div class="d-flex justify-content-center  align-items-center ">
       <div class="card rounded-lg  bg-dark text-light border-primary rounded-pill "  style=" width: 30%;">
      <h2 class="text-center text-primary p-2 my-1">Document Detail</h2>
      </div>
      </div>

      <!-- Add a row here to wrap the columns -->
      <div class="row mt-4">
        <div class="col-lg-6">
          <!-- If image is attached, show it -->
          <% if @document.image.attached? %>
            <%= image_tag @document.image, class: 'img-fluid rounded-0 mb-3' %>
          <% end %>

          <!-- Display document details -->
          <p class="  lead text-light"><strong>Name: </strong><%= @document.name %></p>
          <p class="lead text-light"><strong>Doc: </strong><%= @document.doc_type %></p>
          <p class="lead text-light"><strong>Employee: </strong><%= @document.employee.name %></p>
        </div>  
      </div>

      <!-- Action buttons -->
      <div class="row mt-4">
        <div class="col-lg-12">
          <%= link_to "Edit Document", edit_document_path(@document), class: "btn btn-primary btn-outline-light btn-lg mr-2 rounded-lg" %>
          <%= link_to "Back to Documents", documents_path, class: "btn btn-outline-primary btn-lg rounded-lg" %>
        </div>
      </div>
    </div>
  </div>
</div>
