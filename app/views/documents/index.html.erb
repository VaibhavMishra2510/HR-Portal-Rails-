<div class="col-lg-12">
  <!-- Card with Light Background and Primary Border -->
  <div class="d-flex justify-content-center mb-3 align-items-center ">
     <div class="card rounded-lg  bg-dark text-light border-primary rounded-pill " style="box-shadow: 0 8px 16px rgba(255, 255, 255, 0.2), 0 4px 6px rgba(255, 255, 255, 0.1); width: 40%;">
       <div class="card-body text-center ">
        <h2 class="text-center text-primary ">
          <i class="bi bi-person-fill"></i> All Documents Details 
        </h2>
      </div>
    </div>
  </div>

  <!-- Notifications Section -->
  <div class="text-center mb-4">
    <% if notice %>
      <div class="alert alert-info text-dark p-3 rounded">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger text-dark p-3 rounded">
        <%= alert %>
      </div>
    <% end %>
  </div>

  <!-- Create New Document Link -->
  <%= link_to 'Create New Document', new_document_path, class: "btn btn-success btn-lg mb-4 d-block mx-auto rounded-pill", style: "box-shadow: 0 8px 16px rgba(255, 255, 255, 0.2), 0 4px 6px rgba(255, 255, 255, 0.1); width: 30%;" %>

  <!-- Table of Documents -->
  <% if @documents.any? %>
    <table class="table table-dark table-bordered table-striped table-hover text-light mb-5">
      <thead class="bg-info text-white fw-bold ">
        <tr>
          <th>Name</th>
          <th>Doctype</th>
          <th>Employee</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @documents.each do |document| %>
          <tr class="document-hover">
            <td><%= document.name %></td>
            <td><%= document.doc_type %></td>
            <td><%= link_to document.employee.name, employee_path(document.employee), class: 'text-info' %></td>
            <td>
              <div class="dropdown">
                <button class="btn btn-outline-primary text-bold dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                  Action
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                  <li><%= link_to "Edit", edit_document_path(document), class: "dropdown-item" %></li>
                  <li><%= link_to "View", document_path(document), class: "dropdown-item" %></li>
                  <li><%= link_to "Delete", document_path(document), class: "dropdown-item text-danger", method: :delete, data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center text-warning">No documents available for you at the moment.</p>
  <% end %>
</div>

<!-- Custom CSS for Hover Effect -->
<style>
  .document-hover:hover {
    background-color: #007bff !important; /* Primary color */
    color: white !important; /* Ensure text stays white */
  }

  /* Add padding or border radius to hover effect if needed */
  .document-hover {
    transition: background-color 0.3s ease, color 0.3s ease;
  }
</style>
